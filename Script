-- Script de la GUI de TR00LL
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.Players.LocalPlayer.PlayerGui
ScreenGui.Name = "TR00LL_GUI"

-- Marco principal
local mainFrame = Instance.new("Frame")
mainFrame.Parent = ScreenGui
mainFrame.Size = UDim2.new(0, 400, 0, 600)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -300)
mainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

-- Título de la GUI
local titleLabel = Instance.new("TextLabel")
titleLabel.Parent = mainFrame
titleLabel.Size = UDim2.new(1, 0, 0, 50)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.Text = "TR00LL GUI"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextSize = 30
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)

-- Contenedor para los botones
local buttonFrame = Instance.new("Frame")
buttonFrame.Parent = mainFrame
buttonFrame.Size = UDim2.new(1, 0, 1, -50)
buttonFrame.Position = UDim2.new(0, 0, 0, 50)
buttonFrame.BackgroundTransparency = 1

-- UIGridLayout para organizar los botones
local gridLayout = Instance.new("UIGridLayout")
gridLayout.Parent = buttonFrame
gridLayout.CellSize = UDim2.new(0, 90, 0, 40)
gridLayout.CellPadding = UDim2.new(0, 10, 0, 10)
gridLayout.FillDirection = Enum.FillDirection.Horizontal
gridLayout.SortOrder = Enum.SortOrder.LayoutOrder

-- Función para crear un botón
local function createButton(name, func)
    local button = Instance.new("TextButton")
    button.Parent = buttonFrame
    button.Text = name
    button.Size = UDim2.new(0, 90, 0, 40)
    button.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    button.TextColor3 = Color3.fromRGB(255, 0, 0)
    button.Font = Enum.Font.SourceSansBold
    button.TextSize = 20

    button.MouseButton1Click:Connect(func)
end

-- Botones
createButton("GhostHub", function()
    -- Ejecutar el script del GhostHub
end)

createButton("SCP 096 FE", function()
    -- Ejecutar el script de SCP 096 FE
end)

createButton("Forsaken OP", function()
    -- Ejecutar el script de Forsaken OP
end)

createButton("Brookhaven", function()
    -- Ejecutar el script de Brookhaven
end)

createButton("Aimbot", function()
    -- Ejecutar el script de Aimbot
end)

createButton("Old Animations", function()
    -- Ejecutar el script de Old Animations
end)

createButton("¡TROLÉAME!", function()
    -- Ejecutar el script de Troléame
end)

createButton("Infinity Yield", function()
    -- Ejecutar el script de Infinity Yield
end)

createButton("Forsaken", function()
    -- Ejecutar el script de Forsaken
end)

createButton("Prison Life", function()
    -- Ejecutar el script de Prison Life
end)

createButton("0 Gravity", function()
    -- Ejecutar el script de 0 Gravity
end)

createButton("Simple Domain", function()
    -- Ejecutar el script de Simple Domain
end)

createButton("Invisible", function()
    -- Ejecutar el script de Invisible
end)

createButton("Knife Not FE", function()
    -- Ejecutar el script de Knife Not FE
end)

createButton("Speed Button", function()
    -- Ejecutar el script de Speed Button
end)

createButton("Ctrl+M1=TP", function()
    -- Ejecutar el script de Ctrl+M1=TP
end)

-- Mostrar la GUI
ScreenGui.Parent = game.Players.LocalPlayer.PlayerGui
